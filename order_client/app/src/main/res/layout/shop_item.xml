<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="8dp"
    android:background="@drawable/item_bg_selector"
    android:padding="10dp">

    <com.loopj.android.image.SmartImageView
    android:id="@+id/iv_shop_icon"
    android:layout_width="150dp"
    android:layout_height="120dp"
    android:layout_alignParentLeft="true"
    android:scaleType="fitXY"
    android:src="@drawable/error" />

    <LinearLayout
        android:id="@+id/ll_shop_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@+id/iv_shop_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="麻辣香锅"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_sale_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="月售&#160;&#160;&#160;&#160;1252"
            android:textColor="@color/colorGrey"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="起送￥0&#160;&#160;&#160;&#160;配送￥1"
            android:textColor="@color/colorGrey"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_adNotice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="4dp"
            android:background="#fcf0c0"
            android:padding="2dp"
            android:text="好吃，下次继续点!!!"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_shop_info"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/iv_shop_icon"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_shop_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="位置:西食苑一楼"
            android:textColor="@color/colorGrey" />

        <TextView
            android:id="@+id/tv_shop_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:text="7:00~20:00"
            android:textColor="@color/colorGrey" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_delivery_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:visibility="invisible"
        android:drawableLeft="@mipmap/distance"
        android:drawablePadding="3dp"
        android:text="预计送达时间8分钟"
        android:textColor="@color/colorGrey"
        android:textSize="12sp" />
</RelativeLayout>