<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_background"
    android:orientation="vertical"
    tools:context=".activity.RegisterActivity">

    <include layout="@layout/main_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/user_icon" />

        <LinearLayout
            android:id="@+id/register_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:padding="8dp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="35dp"
            android:background="@drawable/register_style_selector"
            android:orientation="vertical">

            <EditText
                android:id="@+id/reg_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:drawableLeft="@mipmap/register_username"
                android:drawablePadding="10sp"
                android:hint="请输入用户名"
                android:paddingLeft="8dp"
                android:singleLine="true"
                android:textColor="#000"
                android:textColorHint="@color/colorGrey"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/reg_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:drawableLeft="@mipmap/password"
                android:drawableRight="@mipmap/password_invisible"
                android:drawablePadding="10sp"
                android:hint="请输入密码"
                android:paddingLeft="8dp"
                android:singleLine="true"
                android:textColor="#000"
                android:textColorHint="@color/colorGrey"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/reg_password_again"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:drawableLeft="@mipmap/password"
                android:drawableRight="@mipmap/password_again_invisible"
                android:drawablePadding="10sp"
                android:hint="请确认密码"
                android:paddingLeft="8dp"
                android:singleLine="true"
                android:textColor="#000"
                android:textColorHint="@color/colorGrey"
                android:textSize="14sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="35dp"
            android:background="@drawable/btn_register_selector"
            android:text="注册"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>